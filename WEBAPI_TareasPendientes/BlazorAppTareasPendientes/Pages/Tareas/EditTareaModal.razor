@if (IsVisible)
{
    <div class="modal" style="display:block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Tarea</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="Tarea" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div>
                            <label>Nombre:</label>
                            <InputText @bind-Value="Tarea.Nombre" class="form-control" />
                        </div>
                        <div>
                            <label>Descripción:</label>
                            <InputTextArea @bind-Value="Tarea.Descripcion" class="form-control" />
                        </div>
                        <div>
                            <label>Completada:</label>
                            <InputCheckbox @bind-Value="Tarea.Completada" />
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public TareasPendientes Tarea { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task HandleValidSubmit()
    {
        await OnSave.InvokeAsync();
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}
